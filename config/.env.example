# NetworkX MCP Server Configuration
# Copy this file to .env and customize for your environment

# Core Application Settings
MCP_ENVIRONMENT=development
MCP_NAME=networkx-mcp-server
MCP_VERSION=1.0.0
MCP_DEBUG=false

# Server Configuration
MCP_HOST=localhost
MCP_PORT=8765
MCP_WORKERS=4
MCP_MAX_CONNECTIONS=1000
MCP_REQUEST_TIMEOUT=30
MCP_KEEPALIVE_TIMEOUT=5

# Security Settings
MCP_ENABLE_AUTH=false
MCP_API_KEY_REQUIRED=false
MCP_ALLOWED_ORIGINS=*
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_REQUESTS=1000
MCP_RATE_LIMIT_WINDOW=60
MCP_AUDIT_ENABLED=false
MCP_AUDIT_LOG_FILE=audit.log
MCP_MAX_REQUEST_SIZE=10485760
MAX_NODES_PER_REQUEST=1000
MAX_EDGES_PER_REQUEST=10000
SAFE_ID_PATTERN=^[a-zA-Z0-9_-]{1,100}$

# Performance Settings
MAX_NODES_PER_GRAPH=1000000
MAX_EDGES_PER_GRAPH=10000000
MEMORY_LIMIT_MB=4096
OPERATION_TIMEOUT=300
ENABLE_CACHING=true
CACHE_SIZE_MB=512
CACHE_TTL=3600
PARALLEL_PROCESSING=true
USE_CYTHON=true
NUMPY_OPTIMIZATION=true
MAX_MEMORY_MB=1024
MAX_CONCURRENT_REQUESTS=10

# Storage Configuration
STORAGE_BACKEND=auto
# REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PREFIX=networkx_mcp
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5
REDIS_RETRY_ATTEMPTS=3
REDIS_TTL=3600
COMPRESSION_LEVEL=6
MAX_GRAPH_SIZE_MB=100

# Feature Flags
FEATURE_ML=true
FEATURE_VISUALIZATION=true
FEATURE_GPU=false
FEATURE_ENTERPRISE=false
FEATURE_MONITORING=true
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health
API_V2_ENABLED=true
ADVANCED_ALGORITHMS=true
CACHING_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=/var/log/networkx-mcp/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=false