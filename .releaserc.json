{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    },
    {
      "name": "alpha",
      "prerelease": true
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "python scripts/update_version.py ${nextRelease.version}",
        "publishCmd": "python scripts/build.sh --version ${nextRelease.version} --push"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "pyproject.toml",
          "src/networkx_mcp/__version__.py",
          "helm/networkx-mcp/Chart.yaml"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.whl",
            "label": "Python Wheel"
          },
          {
            "path": "dist/*.tar.gz",
            "label": "Source Distribution"
          },
          {
            "path": "helm-packages/*.tgz",
            "label": "Helm Chart"
          }
        ],
        "assignees": ["@maintainers"],
        "addReleases": "bottom"
      }
    ]
  ],
  "preset": "conventionalcommits",
  "parserOpts": {
    "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
  },
  "writerOpts": {
    "commitsSort": ["subject", "scope"]
  },
  "releaseRules": [
    {"type": "feat", "release": "minor"},
    {"type": "fix", "release": "patch"},
    {"type": "perf", "release": "patch"},
    {"type": "revert", "release": "patch"},
    {"type": "docs", "release": false},
    {"type": "style", "release": false},
    {"type": "chore", "release": false},
    {"type": "refactor", "release": "patch"},
    {"type": "test", "release": false},
    {"type": "build", "release": false},
    {"type": "ci", "release": false},
    {"scope": "BREAKING", "release": "major"}
  ],
  "presetConfig": {
    "types": [
      {"type": "feat", "section": "‚ú® Features"},
      {"type": "fix", "section": "üêõ Bug Fixes"},
      {"type": "perf", "section": "‚ö° Performance Improvements"},
      {"type": "revert", "section": "‚è™ Reverts"},
      {"type": "docs", "section": "üìö Documentation", "hidden": false},
      {"type": "style", "section": "üé® Styles", "hidden": true},
      {"type": "chore", "section": "üîß Chores", "hidden": true},
      {"type": "refactor", "section": "‚ôªÔ∏è Code Refactoring"},
      {"type": "test", "section": "üß™ Tests", "hidden": true},
      {"type": "build", "section": "üèóÔ∏è Build System", "hidden": true},
      {"type": "ci", "section": "üë∑ Continuous Integration", "hidden": true}
    ]
  }
}