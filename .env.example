# Environment Variables Template
# Copy this file to .env and replace with actual values
# DO NOT commit .env to version control

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=networkx_mcp
POSTGRES_USER=networkx

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=false

# Monitoring & Observability
MONITORING_ENABLED=true
TRACING_ENABLED=true
METRICS_PORT=9090

# External Services
SENTRY_DSN=your_sentry_dsn_here
ELASTIC_URL=your_elasticsearch_url_here

# API Keys (if needed)
API_KEY_SERVICE_A=your_api_key_here
API_KEY_SERVICE_B=your_api_key_here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# File Upload Limits
MAX_FILE_SIZE_MB=100
MAX_GRAPH_NODES=10000

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=512
